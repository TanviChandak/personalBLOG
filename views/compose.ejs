<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">

    <div class="form-group">

        <label for="text">Title</label>
        <input type="text" class="form-control" name="posttitle" id="text">

    </div>

    <div class="form-group">

        <label for="posttext">Post</label>
        <textarea class="form-control"  rows="9" cols="60"  id="posttext" name="postbody"></textarea>

    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" name="add">Publish</button>

    </div>


</form>

